@model TaskTracker.Models.CommentVM
@{
    ViewBag.Title = "Comment Details";
}

    <h2>Comment Details </h2>


<table class="table">

    <tr>
        <th>Comment Id</th>
        <th>Step Id</th>
        <th>Message</th>
        <th></th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(modelItem => modelItem.CommentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => modelItem.StepId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => modelItem.Message)
        </td>
        <td>
            

            @if (Session["Role"] != null)
            {
                if (Session["Role"].ToString() == "manager" || Session["Role"].ToString() == "employee")
                {
                    <td>
                        @Html.ActionLink("Edit", "EditComment", new { commentId = Model.CommentId })
                        @Html.ActionLink("Delete", "DeleteComment", new { commentId = Model.CommentId })
                    </td>
                }
            }
            </td>
        </tr>
</table>

<p>
    @Html.ActionLink("Back to the list of all tasks", "ListAllTasks")
</p>
