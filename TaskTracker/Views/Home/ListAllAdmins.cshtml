
@model IEnumerable<TaskTracker.Models.AdminVM>

<p>
    @Html.ActionLink("Register New Admin", "CreateTask")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdminId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdminId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "EditTask", new { taskId = item.AdminId })
                @Html.ActionLink("Delete", "DeleteTask", new { taskId = item.AdminId })

            </td>
        </tr>
    }

</table>
