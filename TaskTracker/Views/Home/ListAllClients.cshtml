
@model IEnumerable<TaskTracker.Models.ClientVM>

<p>
    @Html.ActionLink("Register New Client", "RegisterClient")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Country)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CompanyName)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditTask", new { taskId = item.ClientId })
        @Html.ActionLink("Delete", "DeleteTask", new { taskId = item.ClientId })

    </td>
</tr>
    }

</table>
